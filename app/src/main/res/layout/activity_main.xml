<?xml version="1.0" encoding="utf-8"?>

<!--TODO: Apply uniform margins (top vertical margins are doubled) -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:gravity="bottom"
        android:maxLength="12"
        android:textAlignment="viewEnd"
        android:textSize="36sp"
        tools:text="Text here"
        android:text=""/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/purple_200"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_clr"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:onClick="onClear"
            android:padding="3dp"
            android:text="CLR"
            android:textColor="@color/teal_200"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn_del"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_marginStart="4dp"
            android:onClick="onDelete"
            android:background="@drawable/button_background"
            android:textColor="@color/teal_200"
            android:textSize="30sp"
            android:text="Del"/>

        <Button
            android:id="@+id/btn_mod"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:layout_marginStart="4dp"
            android:onClick="onOperator"
            android:background="@drawable/button_background"
            android:textColor="@color/operator_color"
            android:textSize="30sp"
            android:text="%"/>

        <Button
            android:id="@+id/btn_div"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onOperator"
            android:padding="3dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/button_background"
            android:textColor="@color/operator_color"
            android:textSize="30sp"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:padding="3dp"
            android:onClick="onDigit"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="7"/>

        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:padding="3dp"
            android:onClick="onDigit"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="8"/>

        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:padding="3dp"
            android:onClick="onDigit"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="9"/>

        <Button
            android:id="@+id/btn_mul"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:onClick="onOperator"
            android:padding="3dp"
            android:background="@drawable/button_background"
            android:textColor="@color/operator_color"
            android:textSize="30dp"
            android:text="X"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:padding="3dp"
            android:onClick="onDigit"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="4"/>

        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:onClick="onDigit"
            android:padding="3dp"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:text="5"/>

        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:onClick="onDigit"
            android:padding="3dp"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:text="6"/>

        <Button
            android:id="@+id/btn_subtract"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:onClick="onOperator"
            android:padding="3dp"
            android:background="@drawable/button_background"
            android:textColor="@color/operator_color"
            android:textSize="30dp"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:onClick="onDigit"
            android:layout_weight="1"
            android:padding="3dp"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:text="1"
            android:textSize="30dp" />

        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:onClick="onDigit"
            android:padding="3dp"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:text="2"/>

        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:onClick="onDigit"
            android:padding="3dp"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:text="3"/>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:onClick="onOperator"
            android:padding="3dp"
            android:background="@drawable/button_background"
            android:textColor="@color/operator_color"
            android:textSize="30dp"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:onClick="onDigit"
            android:padding="3dp"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:text="0"/>

        <Button
            android:id="@+id/btn_decimal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="3dp"
            android:onClick="onDecimal"
            android:padding="3dp"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:text="."/>

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:layout_marginStart="3dp"
            android:onClick="onEquals"
            android:padding="3dp"
            android:background="@drawable/equals_background"
            android:textColor="@color/teal_200"
            android:textSize="30sp"
            android:text="="/>

    </LinearLayout>




</LinearLayout>